<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nurdiansyah.stadycase.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAKAN MALAM!"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:textSize="15pt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:hint="menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/menu_id"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:text="Dengan Milea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="10pt"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="porsi"
        android:id="@+id/porsi_id"
        android:inputType="number"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/menu_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:text="ABNORMAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_abnormal"
        android:onClick="ABNORMAL"
        android:layout_alignBaseline="@+id/button_eatbus"
        android:layout_alignBottom="@+id/button_eatbus"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:text="EATBUS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_eatbus"
        android:onClick="EATBUS"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/button_abnormal"
        android:layout_toEndOf="@+id/button_abnormal"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>


</RelativeLayout>
